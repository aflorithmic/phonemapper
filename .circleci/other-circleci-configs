jobs:
  test-phonemapper:
    docker:
      - image: cimg/python:3.8.11
    steps:
      - checkout
      - run:
          name: run phonemapper
          command: |
            python3 phonemapper/phonemapper.py
      - run:
          name: unittest phonemapper
          command: |
            python -m unittest test.test_phonemapper
