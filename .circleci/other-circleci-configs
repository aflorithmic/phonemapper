jobs:
  build:
    working_directory: ~/circleci-python
    docker:
      - image: "cimg/python:3.8.11"
    steps:
      - checkout
      - run: python3 phonemapper/phonemapper.py
  test:
    working_directory: ~/circleci-python
    docker:
      - image: "cimg/python:3.8.11"
    steps:
      - checkout
      - run: python3 test/test_phonemapper.py

workflows:
  build_and_test:
    jobs:
      - build
      - test:
          requires:
            - build

